# Environment Configuration Template
# Copy this file to .env and set appropriate values for your environment

# Application Environment
ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here

# Database
DATABASE_URL=sqlite:///loan_manager.db
DATABASE_DIR=data

# Payment Processing
MAX_TRANSACTION_AMOUNT=100000
MAX_DAILY_TRANSACTIONS=10
DAILY_TRANSACTION_LIMIT=500000

# API Configuration
API_TIMEOUT=30
API_RATE_LIMIT=100

# Logging
LOG_DIR=logs
LOG_LEVEL=INFO

# Fraud Detection
FRAUD_CHECK_ENABLED=true
FRAUD_ALERT_THRESHOLD=10000
